import os
from building import *
Import('RTT_ROOT')
Import('rtconfig')

#-------------------------------------------------------------------------------
# Package configuration
#-------------------------------------------------------------------------------
PKGNAME = 'ai'
DEPENDS = ['COMP_USING_OPENCV']

#-------------------------------------------------------------------------------
# Compile the configuration
#-------------------------------------------------------------------------------
SOURCES          = []

LOCAL_CPPPATH    = []
LOCAL_CCFLAGS    = ""
LOCAL_ASFLAGS    = ""

CPPPATH          = [os.path.join(GetCurrentDir(), './include')]
CPPPATH         += [os.path.join(GetCurrentDir(), './include/opencv4')]

CCFLAGS          = ""
ASFLAGS          = ""

CPPDEFINES       = ['OPENCV_DISABLE_THREAD_SUPPORT']
CPPDEFINES      += ['CUDA_ENABLE=0']
CPPDEFINES      += ['OPENGL_ENABLE=0']
LOCAL_CPPDEFINES = []

LIBS             = ['opencv_core']
LIBS            += ['opencv_imgproc']
LIBS            += ['opencv_highgui']
LIBPATH          = [GetCurrentDir() + '/libs']

LINKFLAGS        = ""

#-------------------------------------------------------------------------------
# Feature clip configuration, optional
#-------------------------------------------------------------------------------

#-------------------------------------------------------------------------------
# Compiler platform configuration, optional
#-------------------------------------------------------------------------------

#-------------------------------------------------------------------------------
# System variables
#-------------------------------------------------------------------------------
objs   = []
root   = GetCurrentDir()

#-------------------------------------------------------------------------------
# Sub target
#-------------------------------------------------------------------------------
list = os.listdir(root)
if GetDepend(DEPENDS):
    for d in list:
        path = os.path.join(root, d)
        if os.path.isfile(os.path.join(path, 'SConscript')):
            objs = objs + SConscript(os.path.join(d, 'SConscript'))

#-------------------------------------------------------------------------------
# Main target
#-------------------------------------------------------------------------------
objs += DefineGroup(name = PKGNAME, src = SOURCES, depend = DEPENDS,
                    CPPPATH          = CPPPATH,
                    CCFLAGS          = CCFLAGS,
                    ASFLAGS          = ASFLAGS,
                    LOCAL_CPPPATH    = LOCAL_CPPPATH,
                    LOCAL_CCFLAGS    = LOCAL_CCFLAGS,
                    LOCAL_ASFLAGS    = LOCAL_ASFLAGS,
                    CPPDEFINES       = CPPDEFINES,
                    LOCAL_CPPDEFINES = LOCAL_CPPDEFINES,
                    LIBS             = LIBS,
                    LIBPATH          = LIBPATH,
                    LINKFLAGS        = LINKFLAGS)

Return("objs")

#-------------------------------------------------------------------------------
# End
#-------------------------------------------------------------------------------
