menuconfig COMP_USING_IPERF2
	bool "Enable iperf2"
	default n

	if COMP_USING_IPERF2
		config IPERF_THREAD_STACK_SIZE
			int "the stack size of iperf thread"
			range 4096 65536
			default 16384 if ARCH_CPU_64BIT
			default 8192
	endif

