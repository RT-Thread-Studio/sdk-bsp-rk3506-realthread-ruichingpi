
# Kconfig file for package canfestival
menuconfig BSP_USING_CANFESTIVAL
    bool "Enable CanFestival"
    default n

    if BSP_USING_CANFESTIVAL
        config BSP_CANFESTIVAL_CAN_DEVICE_NAME
            string "CAN device name for CanFestival"
            default "ff320000.can"

        config BSP_CANFESTIVAL_TIMER_DEVICE_NAME
            string "hwtimer device name for CanFestival"
            default "timer0"

        config BSP_CANFESTIVAL_RECV_THREAD_PRIO
            int "The priority level value of can receive thread"
            default 9

        config BSP_CANFESTIVAL_TIMER_THREAD_PRIO
            int "The priority level value of timer thread"
            default 10
    endif
